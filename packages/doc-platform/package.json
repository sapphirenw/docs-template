    "motion": "^12.33.0",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "shiki": "^1.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  }
